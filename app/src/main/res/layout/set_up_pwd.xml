<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/pwd"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        >
        <TextView
            android:maxLength="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请设置密码！"
            android:gravity="center"
            android:layout_marginRight="42dip"
            android:textSize="20dp"
            android:id="@+id/set_up_textview"
            />
        <Button
            android:id="@+id/set_up_back"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:background="@drawable/back"
            android:layout_alignParentRight="true"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/pwd"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_marginTop="20dip"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/set_up_one"
                android:gravity="center"
                android:background="@drawable/circular"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:text="1"
                android:textSize="15pt"
                android:textColor="#5d4157"
                android:layout_marginRight="30dip"
                />

            <Button
                android:id="@+id/set_up_two"
                android:gravity="center"
                android:background="@drawable/circular"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:text="2"
                android:textSize="15pt"
                android:textColor="#5d4157"
                android:layout_marginRight="30dip"
                />
            <Button
                android:id="@+id/set_up_three"
                android:gravity="center"
                android:background="@drawable/circular"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:text="3"
                android:textSize="15pt"
                android:textColor="#5d4157"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dip"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentStart="true">
            <Button
                android:id="@+id/set_up_four"
                android:gravity="center"
                android:background="@drawable/circular"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:text="4"
                android:textSize="15pt"
                android:textColor="#5d4157"
                android:layout_marginRight="30dip"
                />
            <Button
                android:id="@+id/set_up_five"
                android:gravity="center"
                android:background="@drawable/circular"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:text="5"
                android:textSize="15pt"
                android:textColor="#5d4157"
                android:layout_marginRight="30dip"
                />
            <Button
                android:id="@+id/set_up_six"
                android:gravity="center"
                android:background="@drawable/circular"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:text="6"
                android:textSize="15pt"
                android:textColor="#5d4157"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dip"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentStart="true">
            <Button
                android:id="@+id/set_up_seven"
                android:gravity="center"
                android:background="@drawable/circular"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:text="7"
                android:textSize="15pt"
                android:textColor="#5d4157"
                android:layout_marginRight="30dip"
                />
            <Button
                android:id="@+id/set_up_eight"
                android:gravity="center"
                android:background="@drawable/circular"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:text="8"
                android:textSize="15pt"
                android:textColor="#5d4157"
                android:layout_marginRight="30dip"
                />
            <Button
                android:id="@+id/set_up_nine"
                android:gravity="center"
                android:background="@drawable/circular"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:text="9"
                android:textSize="15pt"
                android:textColor="#5d4157"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dip"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentStart="true">
            <Button
                android:id="@+id/set_up_zero"
                android:gravity="center"
                android:background="@drawable/circular"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:text="0"
                android:textSize="15pt"
                android:textColor="#5d4157"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dip"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentStart="true">
            <Button
                android:id="@+id/set_up_ok"
                android:gravity="center"
                android:background="@drawable/circular"
                android:layout_width="150dip"
                android:layout_height="50dip"
                android:text="确定密码"
                android:textSize="12pt"
                android:textColor="#5d4157"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
